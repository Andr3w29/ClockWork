
@{
    ViewBag.Title = "Request Time";
}

<div class="row">
    <div class="col-lg-6 col-md-6  col-xs-12 col-md-offset-3">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Request Time Zone</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-xs-12">

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-xs-3">Time Zone</label>
                                            <div class="col-xs-9">
                                                <select class="form-control input-sm" id="dropDownTimeZones" placeholder="Select Time Zone">
                                                    <option value="Select">--Select--</option>
                                                </select>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="date-seperator"></div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 col-sm-12 col-xs-12">


                                <div class="row">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-2">
                                        <div class="calendar">
                                            <div class="date">
                                                <div class="month">

                                                    Apr
                                                </div>
                                                <div class="day">

                                                    16
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-7">
                                        <div class="form-group">
                                            <ul class="list-unstyled">
                                                <li>
                                                    <span class="header-subinfo">--</span>
                                                </li>
                                                <li>
                                                    <div class="subinfo"><i class="fa fa-clock-o"></i>&nbsp; <span id="date-subinfo-label"></span></div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="list-seperator"></div>
                        <div class="clearfix"></div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="pull-right">
                                    <button type="button" class="btn btn-sm btn-admin btn-sm" id="btRequest"><i class="fa fa-check"></i> Submit Request</button>



                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    Requested Time Zone
                </h3>
            </div>
            <div class="box-body">

                <div id="requested-time-zone-list">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Display Name</th>
                                <th>Client IP</th>
                                <th>Service Time</th>
                                <th>Univesal Time</th>
                                <th>Requested On</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody id="time-zone-requested"></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@section pagescripts {
    <script src="~/Content/js/app/currenttime/cw.currenttime.js"></script>
    <script src="~/Content/js/app/timezone/cw.timezone.js"></script>
    <script type="text/javascript">
        $(function () {
            CurrentTime.initControls();
            TimeZone.initControls();

        });
    </script>

}